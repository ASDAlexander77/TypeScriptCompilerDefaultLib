{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "./build.bat"
            },
            "linux": {
                "command": "./build.sh"
            },
            "problemMatcher":
            {
                "fileLocation": ["relative", "${workspaceFolder}"],                
                "pattern": [
                    {
                        "regexp": "^([^\\s].*)\\s+:\\s+(error|warning|info)\\s+([^\\s].*):\\s+(.*)$",
                        "file": 1,
                        "severity": 2,
                        "code": 3,
                        "message": 4
                    },
                    {
                        "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
                        "line": 1,
                        "column": 2,
                        "severity": 3,
                        "message": 4,
                        "code": 5,
                        "loop": true
                    }
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}